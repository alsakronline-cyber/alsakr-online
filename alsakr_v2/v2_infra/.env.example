# Production Environment Variables Template
# Copy this file to .env and update values

# =============================================================================
# SERVICE HOSTS (Docker internal)
# =============================================================================
ES_HOST=elasticsearch
OLLAMA_HOST=http://ollama:11434
PB_URL=http://pocketbase:8090
QDRANT_HOST=qdrant
REDIS_HOST=redis

# =============================================================================
# SECURITY (⚠️ CHANGE THESE IN PRODUCTION!)
# =============================================================================
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_min_32_chars
ADMIN_EMAIL=admin@alsakronline.com
ADMIN_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PYTHONUNBUFFERED=1

# Domain names (update with your actual domains)
DOMAIN=alsakronline.com
API_DOMAIN=api.alsakronline.com
APP_DOMAIN=app.alsakronline.com

# =============================================================================
# ELASTICSEARCH SETTINGS
# =============================================================================
ES_JAVA_OPTS=-Xms1g -Xmx1g
ES_CLUSTER_NAME=alsakr-cluster

# =============================================================================
# OLLAMA SETTINGS
# =============================================================================
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_CHAT_MODEL=llama3.2

# =============================================================================
# QDRANT SETTINGS
# =============================================================================
QDRANT_VECTOR_SIZE=768
QDRANT_PRODUCTS_COLLECTION=sick_products_vectors

# =============================================================================
# N8N AUTOMATION (Optional)
# =============================================================================
N8N_HOST=n8n.alsakronline.com
N8N_PORT=5678
N8N_PROTOCOL=https
GENERIC_TIMEZONE=Africa/Cairo

# =============================================================================
# POCKETBASE (Optional)
# =============================================================================
PB_ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING

# =============================================================================
# MONITORING (Future)
# =============================================================================
# GRAFANA_ADMIN_PASSWORD=change_this
# PROMETHEUS_RETENTION=15d

# =============================================================================
# BACKUP SETTINGS (Future)
# =============================================================================
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=7
# S3_BUCKET=alsakr-backups
